<link rel="stylesheet" href="{{ 'minicart.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'minicart.css' | asset_url | stylesheet_tag }}</noscript>
<script src="{{ 'minicart.js' | asset_url }}" defer="defer"></script>

<div id="minicart" class="minicart-container">
  
    <div data-cart-background-overlay id="side-cart-overlay" class="side-cart-overlay">&nbsp;</div>
    <div id="side-cart" >
        <div class="side-cart open">
        {% render 'header-cart' %}
        </div>
        <form data-side-cart-form="" action="/cart" method="post" novalidate class>
            <div class="cart">
                {% render 'progress-cart' %}
            </div>
    
            {% render 'products-minicart' %}
            {% render 'minicart-summary' %}

        </form>
        {% render 'footer-minicart' %}
    </div>
    
  
</div>



